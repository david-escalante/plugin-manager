<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-30(%d [%thread]) %-5level %logger{32} - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="org.craftercms.plugin">
        <level value="debug"/>
    </logger>
    <root>
        <level value="error"/>
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
